@model IEnumerable<SportZone.Service.Models.SportDTO>

<h2>
    Sporlar
</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"> Yeni spor ekle</a>
</p>
@if (TempData["succes"] != null)
{
    @section Scripts{
    <script>
        toastr.success('@TempData["succes"]')
    </script>
                }
}
@if (TempData["error"] != null)
{
    @section Scripts{
    <script>
        toastr.error('@TempData["error"]')
    </script>
                }
}
    <table class="table table-bordered">
        <tr>
            
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Kategori</th>

        </tr>
        @foreach (var item in Model) 
        {   
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr> 
        }  
    </table>